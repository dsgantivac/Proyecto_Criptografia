    $(document).ready(function(){
        
      var fastModularExponentiation = function(a, b, n) {
        a = a % n;
        var result = 1;
        var x = a;
      
        while(b > 0){
          var leastSignificantBit = b % 2;
          b = Math.floor(b / 2);
      
